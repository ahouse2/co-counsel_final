{
    "rules": {
        "declaration-block-single-line-max-declarations": null,
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": [
                    "--x",
                    "--y",
                    "--score",
                    "--risk",
                    "--line-width"
                ]
            }
        ]
    },
    "ignoreFiles": [
        "**/*.tsx",
        "**/*.jsx"
    ]
}